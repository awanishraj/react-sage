{
  "compilerOptions": {
    "outDir": "./dist/",
    "pretty": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es2017"
    ],
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./dist/",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*test.ts"
  ]
}
